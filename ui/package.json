{
  "name": "eai-security-check-ui",
  "version": "1.1.0",
  "description": "Electron UI for EAI Security Check",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "security",
    "audit",
    "ui",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.3.3",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.eai.security-check",
    "productName": "EAI Security Check",
    "directories": {
      "output": "release/"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist/",
        "to": "app/dist/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
