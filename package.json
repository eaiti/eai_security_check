{
  "name": "eai-security-check",
  "version": "1.0.0",
  "description": "A Node.js tool to check macOS security settings against a JSON configuration",
  "main": "dist/cli/index.js",
  "bin": {
    "eai-security-check": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "EAI_BUILD_SECRET=\"${EAI_BUILD_SECRET:-$(openssl rand -hex 32)}\" tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "check": "npm run build && npm start check",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "pkg:build": "npm run build && pkg dist/cli/index.js --targets node18-macos-x64,node18-linux-x64,node18-win-x64 --out-path ./bin",
    "pkg:macos": "npm run build && pkg dist/cli/index.js --targets node18-macos-x64 --out-path ./bin",
    "pkg:linux": "npm run build && pkg dist/cli/index.js --targets node18-linux-x64 --out-path ./bin",
    "pkg:windows": "npm run build && pkg dist/cli/index.js --targets node18-win-x64 --out-path ./bin",
    "pkg:local": "npm run build && pkg dist/cli/index.js --targets node18-macos-x64 --out-path ./bin",
    "sign:macos": "node scripts/sign-macos.js",
    "sign:linux": "node scripts/sign-linux.js",
    "sign:windows": "node scripts/sign-windows.js",
    "sign:all": "npm run sign:macos && npm run sign:linux && npm run sign:windows"
  },
  "keywords": [
    "macos",
    "linux",
    "windows",
    "security",
    "audit",
    "diskEncryption",
    "password"
  ],
  "author": "",
  "license": "MIT",
  "pkg": {
    "assets": [
      "examples/**/*.json",
      "daemon-examples/**/*"
    ],
    "scripts": [
      "dist/**/*.js"
    ],
    "outputPath": "./bin"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "npm-check-updates": "^18.0.2",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5"
  }
}
