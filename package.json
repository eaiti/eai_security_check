{
  "name": "eai-security-check",
  "version": "1.0.0",
  "description": "A Node.js tool to check macOS security settings against a JSON configuration",
  "main": "dist/index.js",
  "bin": {
    "eai-security-check": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "check": "npm run build && npm start check",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "pkg:build": "npm run build && pkg dist/index.js --targets node18-macos-x64,node18-linux-x64 --out-path ./bin",
    "pkg:macos": "npm run build && pkg dist/index.js --targets node18-macos-x64 --out-path ./bin",
    "pkg:linux": "npm run build && pkg dist/index.js --targets node18-linux-x64 --out-path ./bin",
    "pkg:local": "npm run build && pkg dist/index.js --targets node18-macos-x64 --out-path ./bin"
  },
  "keywords": [
    "macos",
    "security",
    "audit",
    "diskEncryption",
    "password"
  ],
  "author": "",
  "license": "MIT",
  "pkg": {
    "assets": [
      "examples/**/*.json",
      "daemon-examples/**/*"
    ],
    "scripts": [
      "dist/**/*.js"
    ],
    "outputPath": "./bin"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "jest": "^29.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5"
  }
}
